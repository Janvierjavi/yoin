<% if logged_in? %>

  <% if senryu.favorited(current_user.id).blank? %>
    <%= link_to senryu_favorites_path(senryu.id), method: :post, remote: true do %>
      <i class="far fa-heart"></i>
      <%= senryu.favorites_count %>
    <% end %>
  <% else %>
    <%= link_to senryu_favorite_path(senryu_id: senryu.id, id: senryu.favorites[0].id), method: :delete, remote: true do %>
      <i class="fas fa-heart"></i>
      <%= senryu.favorites_count %>
  <% end %>
  
<% end %>